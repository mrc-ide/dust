# -*-makefile-*-
CXX_STD = CXX14
OBJECTS = cpp11.o dust.o
PKG_LIBS = -lcudart $(SHLIB_OPENMP_CXXFLAGS)

PKG_CXXFLAGS=-I{{path_dust_include}} -DHAVE_INLINE $(SHLIB_OPENMP_CXXFLAGS)

NVCC = nvcc
NVCC_FLAGS = -std=c++14 --use_fast_math -O2 -I. -I$(R_INCLUDE_DIR) -I{{path_dust_include}} $(CLINK_CPPFLAGS) -gencode=arch=compute_70,code=sm_70 -gencode=arch=compute_75,code=sm_75 --use_fast_math -Xcompiler -fPIC -x cu

%.o: %.cu
	$(NVCC) $(NVCC_FLAGS) -c $< -o $@
