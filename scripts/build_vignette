#!/usr/bin/env bash
set -e
SRC="$1.Rmd"
DEST="$1.md"

(cd vignettes_src && Rscript -e "knitr::knit(\"${SRC}\")")
header="DO NOT EDIT THIS FILE - see vignettes_src and make changes there"
sed -s 's/[[:space:]]*$//' vignettes_src/$DEST |
    sed 's/\r//g' |
    sed "s/HEADER/$header/" > vignettes/$SRC
